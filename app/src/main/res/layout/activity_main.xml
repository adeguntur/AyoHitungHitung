<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ade.ayohitung_hitung.MainActivity">

    <TextView
        android:id="@+id/txtsisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Panjang Sisi"
         />

    <EditText
        android:id="@+id/edtsisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtsisi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/btnOke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtsisi"
        android:text="Ok"
        android:background="#F01111"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtluas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas Persegi :"
        android:layout_below="@id/btnOke"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/edtHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtluas"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="@+id/edtsisi"
        />

    <TextView
        android:id="@+id/txtKeliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling Persegi : "
        android:layout_below="@id/edtHasil"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/edtKeliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtKeliling"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
